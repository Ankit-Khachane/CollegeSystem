<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="main.collegesystem.admin.Admin"
    android:background="@color/background_material_dark"
    tools:showIn="@layout/activity_admin">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:src="@drawable/attendance"
                android:background="#ebebeb"
                android:layout_marginTop="5dp"
                android:onClick="gotoAttendancePage"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:id="@+id/textView"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#465787" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:src="@drawable/manual"
                android:background="#ebebeb"
                android:layout_marginTop="5dp"
                android:onClick="gotoManualpage"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manual Work"
                android:id="@+id/textView2"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#465787" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4"
                android:src="@drawable/schedule"
                android:background="#ebebeb"
                android:layout_marginTop="5dp"
                android:onClick="gotoSchedulePage"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:id="@+id/textView3"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#465787" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:src="@drawable/notice"
                android:layout_alignTop="@+id/scrollView"
                android:layout_toRightOf="@+id/scrollView"
                android:layout_toEndOf="@+id/scrollView"
                android:background="#ebebeb"
                android:layout_marginTop="5dp"
                android:onClick="gotoNoticePage"
                android:layout_marginBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notice"
                android:id="@+id/textView4"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:textSize="20dp"
                android:background="#465787" />

        </TableLayout>
    </ScrollView>

</RelativeLayout>
